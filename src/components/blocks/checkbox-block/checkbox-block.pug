mixin create-checkbox-block(params = {})

	//- default values
	-	
		const {
			text = 'Enter text',
			isChecked = false
		} = params

	//- —Ålasses
	
	
	//- block
	label.checkbox-block
		input.checkbox-block__item&attributes({
			type: "checkbox",
			checked: isChecked,
		})
		span.checkbox-block__text=text

